<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="page_bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" 
            style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);">
        </view>
      </view>
      <view class="weui-tab__panel">
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
          <view class="weui-cell" wx:for="{{personListBoy}}">
            <view bindtap='openPerson' id='{{index}}'>
              <view class="info">
                <span class="">#{{item.id}}</span>
                <span class="">{{item.userName}}</span>
                <span class="">{{item.astro}}</span>
                <span class="wrapper">{{item.age}}</span>
                <span class="wrapper">{{item.height}}cm</span>
              </view>

              <view class="info padding-top">
                <span class="">{{item.degreeLevel}}</span>
                <span class="">{{item.career}}</span>
                <span class="">{{item.workplace}}</span>
              </view>


              <view class="comments">
                <view>{{item.selfWish}}</view>
              </view>

            </view>

          </view>
        </view>

        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
          <view class="weui-cell" wx:for="{{personListGirl}}">
            <view bindtap='openPerson' id='{{index}}'>
              <view class="info">
                <span class="">#{{item.id}}</span>
                <span class="">{{item.userName}}</span>
                <span class="">{{item.astro}}</span>
                <span class="wrapper">{{item.age}}</span>
                <span class="wrapper">{{item.height}}cm</span>
              </view>

              <view class="info padding-top">
                <span class="">{{item.degreeLevel}}</span>
                <span class="">{{item.career}}</span>
                <span class="">{{item.workplace}}</span>
              </view>


              <view class="comments">
                <view>{{item.selfWish}}</view>
              </view>

            </view>

          </view>
        </view>
      </view>
    </view>
  </view>
</view>